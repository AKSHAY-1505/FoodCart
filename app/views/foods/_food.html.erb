<div id="<%= dom_id food %>">
  <h3> Images </h3>
  <% food.images.each do |image| %>
    <%= image_tag image.variant(:thumb) %>
  <% end %>
  
  <p>
    <strong>Name:</strong>
    <%= food.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= food.description %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= food.price %>
  </p>
  <p>
    <strong>Quantity:</strong>
    <%= food.quantity %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= Category.find(food.category_id).name %>
  </p>
</div>
