<%= form_with(model: food, class: "shadow_box mt-5") do |form| %>
  <h3>Add a new Food Item</h3>
  <hr />
  <% if food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>
      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>
  <div class="field">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>
  <div class="field">
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>
  <div class="field">
    <%= form.label :category_id, style: "display: block" %>
    <%= form.text_field :category_id %>
  </div>
  <div class="field">
    <%= form.label :images, style: "display: block" %>
    <%= form.file_field :images, multiple: true %>
  </div>
  <div class="field center">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
