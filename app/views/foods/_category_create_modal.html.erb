<button type="button" class="btn btn-success ms-3" data-bs-toggle="modal" data-bs-target="#categoryCreateModal">
  <span><i class="bi bi-plus-lg"></i></span> Create a new Category
</button>
<div class="modal fade" id="categoryCreateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Create a new Category</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body mt-0">
        <%= form_with(url: categories_path, id: "new-category-form", remote: true) do |form| %>
          <div class="field mt-0">
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name %>
          </div>
          <%= form.submit class: "btn btn-success field center", data: { 'bs-dismiss': "modal" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>