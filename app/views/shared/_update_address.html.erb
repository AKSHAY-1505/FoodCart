<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Update Delivery Address
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Update Delivery Address</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @customer,method: :patch,url: customer_path(@customer), local: true) do |form| %>
          <div>
            <%= form.label :house_number %>
            <%= form.text_field :house_number %>
          </div>
          <div>
            <%= form.label :street %>
            <%= form.text_field :street %>
          </div>
          <div>
            <%= form.label :locality %>
            <%= form.text_field :locality %>
          </div>
          <div>
            <%= form.label :city %>
            <%= form.text_field :city %>
          </div>
          <div>
            <%= form.label :phone_number %>
            <%= form.text_field :phone_number %>
          </div>
          <%= form.submit "Update Address", data: { 'bs-dismiss': "modal" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>