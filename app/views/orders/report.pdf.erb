<html>
  <head>
    <%= wicked_pdf_stylesheet_link_tag "pdf" %>
  </head>
  <body>
    <h1>Orders Report for Specified Dates</h1>
    <table border>
      <thead>
        <th>Order ID</th>
        <th>Customer Name</th>
        <th>Placed At</th>
        <th>Status</th>
        <th>Amount Paid</th>
      </thead>
      <tbody>
        <% orders.each do |order| %>
          <tr>
            <td>#<%= order.id %></td>
            <td><%= order.customer.user.name %></td>
            <td><%= order.created_at.to_date %></td>
            <td><%= order.status.titleize %></td>
            <td>Rs <%= order.total %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>