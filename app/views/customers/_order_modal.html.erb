<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= order.id %>">
  Order Details
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal<%= order.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Order Details</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="order card shadow-sm mb-4">
          <div class="card-body">
            <div class="order_items mb-3">
              <h5 class="mb-2">Order Items:</h6>
              <% order.order_items.each do |item| %>
                <div class="row mb-2">
                  <div class="col-md-4">
                    <p><strong>Food: </strong><%= item.food_name %></p>
                  </div>
                  <div class="col-md-4">
                    <p><strong>Price: </strong>Rs <%= item.food_price %></p>
                  </div>
                  <div class="col-md-4">
                    <p><strong>Quantity: </strong><%= item.quantity %></p>
                  </div>
                </div>
              <% end %>
            </div>
            <hr />
            <div class="order_summary">
              <h5 class="mb-2">Order Summary:</h6>
              <p><strong>Subtotal: </strong>Rs <%= order.subtotal %></p>
              <p><strong>Delivery Charge: </strong>Rs <%= order.delivery_charge %></p>
              <p><strong>Discount: </strong>Rs <%= order.discount %></p>
              <p><strong>Total: </strong>Rs <%= order.total %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
