<h2>Customer Sign Up</h2>
<%= form_with(model: @customer, local: true) do |form| %>
  <%= form.fields_for :user do |user_form| %>
    <div>
      <%= user_form.label :name %>
      <%= user_form.text_field :name %>
    </div>
    <div>
      <%= user_form.label :email %>
      <%= user_form.text_field :email %>
    </div>
    <div>
      <%= user_form.label :password %>
      <%= user_form.password_field :password %>
    </div>
    <div>
      <%= user_form.label :password_confirmation %>
      <%= user_form.password_field :password_confirmation %>
    </div>
  <% end %>
  <div>
    <%= form.label :house_number %>
    <%= form.text_field :house_number %>
  </div>
  <div>
    <%= form.label :street %>
    <%= form.text_field :street %>
  </div>
  <div>
    <%= form.label :locality %>
    <%= form.text_field :locality %>
  </div>
  <div>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>
  <%= form.submit "Sign Up" %>
<% end %>