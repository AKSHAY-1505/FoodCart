<h2>Update Delivery Address</h2>
<% if flash[:alert] %>
  <p> <%= flash[:alert] %> </p>
<% end %>
<%= form_with(model: @customer, local: true) do |form| %>
  <div>
    <%= form.label :house_number %>
    <%= form.text_field :house_number %>
  </div>
  <div>
    <%= form.label :street %>
    <%= form.text_field :street %>
  </div>
  <div>
    <%= form.label :locality %>
    <%= form.text_field :locality %>
  </div>
  <div>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>
  <%= form.submit "Update Profile" %>
<% end %>
